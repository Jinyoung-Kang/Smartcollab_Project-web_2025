<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="httpPlatformHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified" />
    </handlers>
    <httpPlatform processPath="%JAVA_HOME%\bin\java.exe"
                  arguments="-Djava.net.preferIPv4Stack=true -Dserver.port=%HTTP_PLATFORM_PORT% -Duser.timezone=Asia/Seoul -jar &quot;%HOME%\site\wwwroot\app.jar&quot;">
    </httpPlatform>

    <security>
      <requestFiltering>
        <maxAllowedContentLength>20971520</maxAllowedContentLength>
      </requestFiltering>
    </security>
  </system.webServer>
</configuration>
